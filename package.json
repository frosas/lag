{
  "name": "lag",
  "private": true,
  "scripts": {
    "build": "vite build",
    "node-tsx": "node --import tsx",
    "lint": "concurrently -n typescript,eslint \"npm run lint-typescript\" \"npm run lint-eslint\"",
    "lint-eslint": "eslint .",
    "lint-typescript": "tsc",
    "test": "concurrently -n lint,unit-test,build \"npm run lint\" \"npm run test-unit\" \"npm run build\"",
    "test-unit": "npm run node-tsx -- node_modules/.bin/mocha 'src/**/*.test.ts'",
    "dev": "npm_config_loglevel=silent concurrently -k -n vite,lint,test-unit \"npm run dev-vite\" \"npm run dev-lint\" \"npm run dev-test-unit\"",
    "dev-vite": "vite",
    "dev-lint": "concurrently -k -n typescript,eslint \"npm run dev-lint-typescript\" \"npm run dev-lint-eslint\"",
    "dev-lint-eslint": "onchange -ki --exclude-path .gitignore '**/*.{js,ts,tsx}' -- npm run lint-eslint -- --fix",
    "dev-lint-typescript": "npm run lint-typescript -- --watch --preserveWatchOutput --pretty",
    "dev-test-unit": "onchange -ki 'src/**/*.js' -- npm run test-unit",
    "prepare": "husky",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@frosas/eslint-config": "^8.3.3",
    "@sentry/browser": "^8.55.0",
    "@tsconfig/node22": "^22.0.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@types/chai": "^4.2.18",
    "@types/d3-scale": "^4.0.1",
    "@types/eslint": "^8.56.10",
    "@types/mocha": "^10.0.6",
    "@types/node": "^22.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "chai": "^4.3.4",
    "compression": "^1.7.2",
    "concurrently": "^8.2.2",
    "d3-scale": "^4.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eventemitter3": "^5.0.1",
    "express": "^4.19.2",
    "husky": "^9.0.11",
    "mocha": "^10.4.0",
    "onchange": "^7.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.4.5",
    "vite": "^5.4.8"
  }
}
